<% friend = User.third %>
<div class="chat-part">
  <div class="chat-box">
    
    <div class="chat-box-header">
      <div class="blank-part"></div>
      <div class="color-part">
        <%= friend.name %>
      </div>
      <%= image_tag friend.profile_url %>
      
    </div>
    <div class="chat-container">
      <div class="chat-content">
        <% current_user.my_messages_with(friend.id).each do |message| %>
          <% if is_received_message?(message) %>
          <div class="received-message-box">
            <div class="received-message">
              <%= message.body %>
            </div>
          </div>
          <% else %>
          <div class="sent-message-box">
            <div class="sent-message">
              <%= message.body %>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    
    
    <div class="chat-box-controller">
      <div class="chat-box-controller-inside">
        
        <div class="chat-box-input"></div>
        <div class="button is-primary send-btn my-mini-black-btn">SEND</div>
      </div>
      
      
    </div>
    
    
    
    
  </div>
  <div class="chat-box">
    <div class="chat-box-header">
      <div class="blank-part"></div>
      <div class="color-part">
        DAVE AWESOME
      </div>
      <%= image_tag "avatar.png" %>
    </div>
    <div class="chat-box-input">
    </div>
  </div>
  
</div>
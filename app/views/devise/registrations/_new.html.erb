<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="columns is-centered">
  
  <div class="column is-6 form-background">
    
    <div class="columns is-centered">
      <%= render "shared/match_image"%>
    </div>
    
    <div class="guide-text column is-centered is-8 "> 
      <h1 class="is-size-3">You donâ€™t have an account yet.<br>Do you want to sign up with</h1> 
    </div>
    
    <div class="input-items columns is-centered">
      <div class="column is-8">
        <div class="field">
          <div class="control">
            <%= f.text_field :name, class: "input input-box", placeholder: "Name" %>
          </div>
          <div class="control">
            <%= f.email_field :email, class: "input input-box", placeholder: "Email" %>
          </div>
          <div class="control">
            <%= f.password_field :password, class: "input input-box", placeholder: "Password" %>
          </div>
          
          <div class="control">
            <%= f.text_field :profile_url, class: "input input-box", placeholder: "profile_url" %>
          </div>
        </div>
      </div>
      
    </div>
    
    <div class="two-buttons column is-12">
      
      <%= link_to "Sign in", new_user_session_path, class: "left-btn button is-primary is-outlined" %>
      <%= f.submit "Sign up", class: "right-btn button is-primary"%>
    </div>
    
  </div>
</div>
<% end %>